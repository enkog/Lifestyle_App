<p id="notice"><%= notice %></p>

<div class="row">
  <% @category.articles.each do |article| %>
    <div class=" col-12 col-md-6 bg-white">
      <div class="cat-article-section row h-100">
        <div class="col-6">
          <%=image_tag(article.image) if article.image.attached?%>
        </div>
        <div class="col-6 cat-article-desc">
          <div class="category-title-list text-dark font-weight-bold pt-2">
            <h3 class="position-relative"><%= @category.name %></h3>
          </div>
          <div class="text-dark pb-2 pt-2">
            <h6 class="position-relative font-weight-bold">
              <%= link_to article.title, article_path(article) %>
            </h6>
            <p class="mt-3"><%=article.text.truncate(20) %></p>
            <%=  link_to "Read More...", article %><br>
            <small class="text-muted">
              Created by: <%= article.author.name if article.author%><br>last updated: <%= time_ago_in_words(article.updated_at) %> ago
            </small>
            <%= show_votes?(article) %>
            <%= handle_vote(article) %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
